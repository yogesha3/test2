    </style>
    <style name="NoRecordTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:textSize">@dimen/login_alrady_account_txt_size</item>
    </style>

    <style name="DetailReferrlCommentTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#C8C8C9</item>
        <item name="android:textColorHint">#C8C8C9</item>
