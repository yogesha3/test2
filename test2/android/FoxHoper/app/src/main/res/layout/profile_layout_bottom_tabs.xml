<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical"
    android:background="@color/bottom_tab_bg_color"
    >
    <View
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/bottom_tab_stip_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="4"
        >
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llBottomHomeTab"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imgvBottomTabHome"
                android:layout_width="@dimen/app_bottom_tabs_icon_width"
                android:layout_height="@dimen/app_bottom_tabs_icon_hight"
                android:src="@drawable/ic_tab_home"
            />
            <TextView
                android:id="@+id/txtvBottomTabHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_home"
                android:visibility="gone"
                style="@style/BottomTabTextStyle"/>
        </LinearLayout>
        <View
            android:visibility="gone"
            android:layout_width="0.8dp"
            android:layout_height="fill_parent"
            android:background="@color/bottom_tab_stip_color"
            />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llBottomSelectAllTab"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imgvBottomTabSelect"
                android:layout_width="@dimen/app_bottom_tabs_icon_width"
                android:layout_height="@dimen/app_bottom_tabs_icon_hight"
                android:src="@drawable/ic_checked_b"
                />
            <TextView
                android:id="@+id/txtvBottomTabSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_select"
                android:visibility="gone"
                style="@style/BottomTabTextStyle"/>
        </LinearLayout>
        <View
            android:visibility="gone"
            android:layout_width="0.8dp"
            android:layout_height="fill_parent"
            android:background="@color/bottom_tab_stip_color"
            />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llBottomComposeTab"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imgvBottomTabCompose"
                android:layout_width="@dimen/app_bottom_tabs_icon_width"
                android:layout_height="@dimen/app_bottom_tabs_icon_hight"
                android:src="@drawable/ic_tab_compose"
                />
            <TextView
                android:id="@+id/txtvBottomTabCompose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/str_compose"
                style="@style/BottomTabTextStyle"/>
        </LinearLayout>
        <View
            android:visibility="gone"
            android:layout_width="0.8dp"
            android:layout_height="fill_parent"
            android:background="@color/bottom_tab_stip_color"
            />
        <LinearLayout
            android:id="@+id/llBottomEditTab"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imgvBottomTabSearch"
                android:layout_width="@dimen/app_bottom_tabs_icon_width"
                android:layout_height="@dimen/app_bottom_tabs_icon_hight"
                android:src="@drawable/icon_edit_bottom"
                />
            <TextView
                android:id="@+id/txtvBottomEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_search"
                android:visibility="gone"
                style="@style/BottomTabTextStyle"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
