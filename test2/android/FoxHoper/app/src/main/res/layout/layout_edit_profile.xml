<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/send_referrals_margin_top"
    android:layout_marginBottom="@dimen/send_referrals_margin_bottom"
    android:layout_marginLeft="@dimen/create_referrals_margin_left"
    android:layout_marginRight="@dimen/create_referrals_margin_right"
    android:background="@drawable/bg_send_referrals"
    xmlns:CustomSpinner="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent">
        <com.app.foxhopr.custom.view.BounceScrollView
            android:layout_width="fill_parent"
            android:fillViewport="true"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/llUpdate"
            android:id="@+id/scrollView"
            android:fadingEdge="none"
            android:layout_height="fill_parent">
            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="vertical"

                android:padding="10dp"
                android:layout_height="fill_parent">

                <com.app.foxhopr.custom.view.RegularTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/str_city"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black_white"
                    style="@style/LableReferrlTextStyle" />
                <EditText
                    android:id="@+id/editTextCityCreateNewContact"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:hint="@string/str_city"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    style="@style/InputReferrlTextStyle" />

                <com.app.foxhopr.custom.view.RegularTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/str_address"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black_white"
                    style="@style/LableReferrlTextStyle" />
                <EditText
                    android:id="@+id/editTextAddressCreateNewContact"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:hint="@string/str_address"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    style="@style/InputReferrlTextStyle" />

                <com.app.foxhopr.custom.view.RegularTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/str_mobile"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black_white"
                    style="@style/LableReferrlTextStyle" />
                <EditText
                    android:id="@+id/editTextMobileCreateNewContact"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:hint="@string/str_mobile"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    style="@style/InputReferrlTextStyle" />

                <com.app.foxhopr.custom.view.RegularTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/str_office_phone"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black_white"
                    style="@style/LableReferrlTextStyle" />
                <EditText
                    android:id="@+id/editTextOfficePhoneCreateNewContact"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:hint="@string/str_office_phone"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    style="@style/InputReferrlTextStyle" />

                <com.app.foxhopr.custom.view.RegularTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/str_website1"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black_white"
                    style="@style/LableReferrlTextStyle" />
                <EditText
                    android:id="@+id/editTextWebsite1"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:hint="@string/str_website1"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    style="@style/InputReferrlTextStyle" />

                <com.app.foxhopr.custom.view.RegularTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/str_website2"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black_white"
                    style="@style/LableReferrlTextStyle" />

                <EditText
                    android:id="@+id/editTextWebsite2"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:hint="@string/str_website2"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    style="@style/InputReferrlTextStyle" />

                <com.app.foxhopr.custom.view.RegularTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/str_twitter_id"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black_white"
                    style="@style/LableReferrlTextStyle" />

                <EditText
                    android:id="@+id/editTexxTwitterId"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:hint="@string/str_twitter_id"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    style="@style/InputReferrlTextStyle" />

                <com.app.foxhopr.custom.view.RegularTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/str_facebook_id"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black_white"
                    style="@style/LableReferrlTextStyle" />

                <EditText
                    android:id="@+id/editTexxFacebookId"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:hint="@string/str_facebook_id"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    style="@style/InputReferrlTextStyle" />

                <com.app.foxhopr.custom.view.RegularTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/str_linkedin_id"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black_white"
                    style="@style/LableReferrlTextStyle" />

                <EditText
                    android:id="@+id/editTexxLinkedinId"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:hint="@string/str_linkedin_id"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    style="@style/InputReferrlTextStyle" />

                <com.app.foxhopr.custom.view.RegularTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/str_skype_id"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black_white"
                    style="@style/LableReferrlTextStyle" />

                <EditText
                    android:id="@+id/editTexxSkypeId"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:hint="@string/str_skype_id"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    style="@style/InputReferrlTextStyle" />

                <com.app.foxhopr.custom.view.RegularTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/str_about_me"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black_white"
                    style="@style/LableReferrlTextStyle" />


                <EditText
                    android:id="@+id/editTextAboutMe"
                    android:layout_width="fill_parent"
                    android:padding="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:layout_height="@dimen/invite_partner_edittext_height_width"
                    style="@style/InputReferrlTextStyle" />

                <com.app.foxhopr.custom.view.RegularTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/str_company_description"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black_white"
                    style="@style/LableReferrlTextStyle" />


                <EditText
                    android:id="@+id/editTextCompanyDescription"
                    android:layout_width="fill_parent"
                    android:padding="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:layout_height="@dimen/invite_partner_edittext_height_width"
                    style="@style/InputReferrlTextStyle" />

                <com.app.foxhopr.custom.view.RegularTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/str_service"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black_white"
                    style="@style/LableReferrlTextStyle" />

                <EditText
                    android:id="@+id/editTextServices"
                    android:layout_width="fill_parent"
                    android:padding="5dp"
                    android:imeOptions="actionNext"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:layout_height="@dimen/invite_partner_edittext_height_width"
                    style="@style/InputReferrlTextStyle" />
            </LinearLayout>
        </com.app.foxhopr.custom.view.BounceScrollView>

        <LinearLayout
            android:id="@+id/llUpdate"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_next"
            android:gravity="center"
            android:orientation="vertical" >
            <com.app.foxhopr.custom.view.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="@string/str_update"
                style="@style/NextTextStyle"
                />
        </LinearLayout>
    <FrameLayout
        android:id="@+id/referralsSearchViewPager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
