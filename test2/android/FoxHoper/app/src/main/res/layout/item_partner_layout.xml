<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/list_back_color"
        android:paddingRight="@dimen/list_item_padding"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:weightSum="2">


        <LinearLayout
            android:id="@+id/llMessageAttachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"

            android:layout_weight="0.3"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/imageViewStatus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/llMessageAttachment"
            android:layout_toLeftOf="@+id/llReferralsRecivedCheck"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                style="@style/ReferrelsTitleTextStyle"
                android:text="Alex S"
                android:id="@+id/textViewItemInvitee" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:weightSum="2"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/llListReferralsStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1.1"
                    android:orientation="horizontal"
                    >
                    <com.app.foxhopr.custom.view.RegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:textSize="@dimen/referrals_list_txt_textsize"
                        android:textColor="@color/gray_color"
                        android:text="@string/str_status" />
                    <com.app.foxhopr.custom.view.RegularTextView
                        android:id="@+id/textViewViewStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:textSize="@dimen/referrals_list_txt_textsize"
                        android:maxLines="1"
                        android:textColor="@color/gray_color"
                        />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:background="@color/gray_color"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    android:layout_height="fill_parent" />
                <LinearLayout
                    android:id="@+id/llListReferralsValues"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal"
                    >
                    <com.app.foxhopr.custom.view.RegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:textSize="@dimen/referrals_list_txt_textsize"
                        android:textColor="@color/gray_color"
                        android:text="@string/str_value" />
                    <com.app.foxhopr.custom.view.RegularTextView
                        android:id="@+id/textViewAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:textSize="@dimen/referrals_list_txt_textsize"
                        android:singleLine="true"
                        android:textColor="@color/gray_color"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:weightSum="2"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/referrals_list_size"
                        android:layout_height="@dimen/referrals_list_size"
                        android:src="@drawable/icon_email_color"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:paddingLeft="2dp"
                        style="@style/ReferrelsSmallTextStyle"
                        android:id="@+id/textViewItemEmail" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    >
                    <ImageView
                        android:layout_width="@dimen/referrals_list_size"
                        android:layout_height="@dimen/referrals_list_size"
                        android:src="@drawable/ic_list_cal"
                        android:id="@+id/imageView" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:paddingLeft="2dp"
                        style="@style/ReferrelsSmallTextStyle"
                        android:id="@+id/textViewItemDate" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <!--<LinearLayout
            android:id="@+id/llReferralsRecivedCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_weight="0.3"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imageViewAmountStatus"
                android:layout_width="@dimen/referrals_list_size"
                android:layout_height="@dimen/referrals_list_size"
                android:src="@drawable/icon_status_accepted"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:paddingLeft="2dp"
                android:text="00"
                style="@style/ReferrelsTitleTextStyle"
                android:id="@+id/textViewAmount" />

        </LinearLayout>-->
    </RelativeLayout>
</LinearLayout>
